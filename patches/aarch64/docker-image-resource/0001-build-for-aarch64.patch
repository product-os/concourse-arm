From 13608f75f456ac8592b29bc89e770850952f277b Mon Sep 17 00:00:00 2001
From: Petros Angelatos <petrosagg@gmail.com>
Date: Thu, 9 Aug 2018 09:09:22 -0700
Subject: [PATCH] build for aarch64

Signed-off-by: Petros Angelatos <petrosagg@gmail.com>
---
 .dockerignore |  1 +
 Dockerfile    | 12 ++++++++++--
 2 files changed, 11 insertions(+), 2 deletions(-)

diff --git a/.dockerignore b/.dockerignore
index d2e8d95..3c10c14 100644
--- a/.dockerignore
+++ b/.dockerignore
@@ -8,3 +8,4 @@
 !/LICENSE
 !/NOTICE.md
 !/README.md
+!qemu-aarch64-static-3.0.0
diff --git a/Dockerfile b/Dockerfile
index e40529d..55b50f6 100644
--- a/Dockerfile
+++ b/Dockerfile
@@ -1,4 +1,6 @@
-FROM golang:alpine AS builder
+FROM resin/aarch64-alpine-golang AS builder
+COPY ./qemu-aarch64-static-3.0.0 /usr/bin/qemu-aarch64-static
+RUN [ "cross-build-start" ]
 
 COPY . /go/src/github.com/concourse/docker-image-resource
 ENV CGO_ENABLED 0
@@ -10,17 +12,23 @@ ENV CGO_ENABLED 1
 RUN set -e; for pkg in $(go list ./...); do \
 		go test -o "/tests/$(basename $pkg).test" -c $pkg; \
 	done
+RUN [ "cross-build-end" ]
 
-FROM alpine:edge AS resource
+FROM resin/aarch64-alpine:edge AS resource
+COPY ./qemu-aarch64-static-3.0.0 /usr/bin/qemu-aarch64-static
+RUN [ "cross-build-start" ]
 RUN apk --no-cache add bash docker jq ca-certificates xz
 COPY --from=builder /assets /opt/resource
 RUN mv /opt/resource/ecr-login /usr/local/bin/docker-credential-ecr-login
+RUN [ "cross-build-end" ]
 
 FROM resource AS tests
+RUN [ "cross-build-start" ]
 COPY --from=builder /tests /tests
 ADD . /docker-image-resource
 RUN set -e; for test in /tests/*.test; do \
 		$test -ginkgo.v; \
 	done
+RUN [ "cross-build-end" ]
 
 FROM resource
-- 
